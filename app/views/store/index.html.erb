<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.each do |item| %>
  <p>
  	<%= item.title %> | <%= number_to_currency(item.price) %> | <%= button_to '/line_items' do %>
  		Add to Cart
  		<input type="hidden" name="item[item_id]" value="<%= item.id %>">
  	<% end %>
  </p>
<% end %>